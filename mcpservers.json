{
  "mcpServers": {
    "codegen": {
      "command": "uvx",
      "args": ["mcp-server-codegen"],
      "env": {
        "OPENAI_KEY": "${ENV_YOUR_OPENAI_KEY}"
      }
    },
    "todoist": {
      "command": "npx",
      "args": ["-y", "@abhiz123/todoist-mcp-server"],
      "disabled": true,  # Enable manually when needed
      "env": {
        "TODOIST_API_TOKEN": "your_token_here"
      }
    }
  }
}
